<div class="form-group">
  <div class="row">
    <div class="col-xs-12">
      <div id="datetimepicker"></div>
    </div>
  </div>
</div>

<div class='class="col-xs-12'>
  <div class="panel panel-body">
    <%= form_tag export_sales_path do |form| %>

      <div class="row">
        <div class="col-xs-12">
          <h4 id="sales-export-heading">Export sales</h4>
        </div>
      </div>

      <div class="form-group">
        <div class='input-group date' id='start-date-picker'>
          <%= text_field_tag :start_date, @date.strftime('1st, %b %y'), required: true, class: 'form-control' %>
          <span class="input-group-addon btn1">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>

      <div class="form-group">
        <div class='input-group date' id='end-date-picker'>
          <%= text_field_tag :end_date, nil, required: true, class: 'form-control' %>
          <span class="input-group-addon btn2">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
      </div>

      <%= submit_tag 'Export', remote: true, id: 'sales-export-button', class: 'btn btn-primary pull-right disabled' %>
    <% end %>
  </div>
</div>

