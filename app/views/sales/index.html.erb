<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-xs-12">
      <h1>Sales</h1>

      <div class="row">
        <div class="col-xs-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <%# <%= line_chart day_chart %>
              <%= line_chart Sale.day(@date).product_chart_hour.take(20) %>
            </div>
            <div class="panel-footer">
              Today: <%= Date.today.strftime '%A %b %Y' %>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <%# <%= line_chart week_chart %>
              <%= line_chart Sale.week(@date).product_chart_day.take(20) %>
            </div>
            <div class="panel-footer">
              Week: <%= 1.week.ago.strftime '%A %b %Y' %> - <%= Date.today.strftime '%A %b %Y' %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <%# <%= line_chart month_chart %>
              <%= line_chart Sale.month(@date).product_chart_week.take(20) %>
            </div>
            <div class="panel-footer">
              Month: <%= 1.month.ago.strftime '%A %b %Y' %> - <%= Date.today.strftime '%A %b %Y' %>
            </div>
          </div>
        </div>

        <div class="col-xs-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <%# <%= line_chart year_chart %>
              <%= line_chart Sale.year(@date).product_chart_month.take 20 %>
            </div>
            <div class="panel-footer">
              Year: <%= 1.year.ago.strftime '%A %b %Y' %> - <%= Date.today.strftime '%A %b %Y' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
    </div>
    <div class="col-xs-6">
      <table>
        <thead>
          <tr>
            <th>Total</th>
            <th>Net total</th>
            <th>Vat</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sales.take(1).each do |sale| %>
            <tr>
              <% sale.products.each do |p| %>
                <tr>
                  <td><%= p.name %></td>
                </tr>
              <% end %>
              <td>
              <td><%= sale.total %></td>
              <td><%= sale.net_total %></td>
              <td><%= sale.vat %></td>
              <td><%= link_to 'Show', sale %></td>
              <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
              <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
