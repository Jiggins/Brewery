$(document).ready(function() {
  $('.edit_product').on('ajax:success', function(event, data, status, xhr) {
    $('#notice').html("<%= escape_javascript(render 'products/notice') %>");
  });

  $('.edit_product').on('ajax:error', function(e, xhr, status, error) {
    console.log("error: " + error);
    $('#notice').html("<%= escape_javascript(render 'products/notice') %>");
  });

  window.setTimeout(function() {
    $("#notice").fadeTo(500, 0).slideUp(500, function(){
      $(this).html("<div id='notice'></div>"); 
    });
  }, 5000);
});

