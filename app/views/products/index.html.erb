<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p id="notice"><%= notice %></p>

      <h1>Products</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Vat rate</th>
            <th>Visible</th>
            <th>Image Upload</th>
            <th>Update</th>
          </tr>
        </thead>

        <tbody>
          <% @product = Product.new %>
          <%= render partial: 'products/form', locals: { product: Product.new } %>

          <% @products.each do |product| %>
            <tr>
              <% @product = product %>
              <%= render partial: 'products/form', locals: { product: product }  %>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
        </tfoot>
      </table>
    </div>
  </div>
</div>
